@page "/editar-produto"
@inject NavigationManager Navigation

<h2 class="text-center mt-3">✏ Editar Produto</h2>

<div class="container mt-4">
    <div class="card shadow p-4" style="border-radius: 12px;">
        <h4 class="mb-3 text-primary">Informações do Produto</h4>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Nome</label>
                <input class="form-control" @bind="Produto.Nome" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Categoria</label>
                <input class="form-control" @bind="Produto.Categoria" />
            </div>

            <div class="col-12">
                <label class="form-label fw-bold">Descrição</label>
                <textarea class="form-control" rows="3" @bind="Produto.Descricao"></textarea>
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Preço (R$)</label>
                <input type="number" step="0.01" class="form-control" @bind="Produto.Preco" />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Estoque</label>
                <input type="number" class="form-control" @bind="Produto.Estoque" />
            </div>
        </div>

        <hr class="my-4" />

        <div class="d-flex justify-content-between">
            <button class="btn btn-secondary px-4" @onclick="Voltar">
                ⬅ Voltar
            </button>

            <button class="btn btn-success px-4" @onclick="Salvar">
                ✔ Salvar Alterações
            </button>
        </div>
    </div>
</div>

@code {
    [Parameter] public int id { get; set; }

    ProdutoModel Produto = new ProdutoModel();

    protected override void OnInitialized()
    {
        // Simulação de carregar o produto (mock)
        Produto = new ProdutoModel
        {
            Nome = "Camiseta Nike DryFit",
            Categoria = "Roupas",
            Descricao = "Camiseta esportiva respirável",
            Preco = 89.99m,
            Estoque = 50
        };
    }

    void Voltar()
    {
        Navigation.NavigateTo("/produtos");
    }

    void Salvar()
    {
        // Lógica de salvar (API, banco de dados etc.)
        Console.WriteLine("Produto salvo com sucesso!");

        Navigation.NavigateTo("/produtos");
    }

    public class ProdutoModel
    {
        public string Nome { get; set; }
        public string Categoria { get; set; }
        public string Descricao { get; set; }
        public decimal Preco { get; set; }
        public int Estoque { get; set; }
    }
}
