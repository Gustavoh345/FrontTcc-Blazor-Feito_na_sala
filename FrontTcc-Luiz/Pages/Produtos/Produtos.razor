@page "/produtos"
@inject ProdutosViewModel VM
@inject NavigationManager Navigation
@using FrontTcc_Luiz.ViewModels
@using FrontTcc_Luiz.Services
@inject ProdutosViewModel VM

<h3>Lista de Produtos</h3>

<div class"div-voltar">
    <button class="btn-voltar" @onclick="VoltarPaginaInicial">
        Voltar á pagina inicial
    </button>
</div>

    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Categoria</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Estoque</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in VM.Produtos)
            {
                <tr>
                    <td>@p.Nome</td>
                    <td>@p.Categoria</td>
                    <td>@p.Descricao</td>
                    <td>@p.Preco</td>
                    <td>@p.Estoque</td>
                </tr>
            }
        </tbody>
    </table>


<button class="btn-cadastrar" @onclick="CadastrarProduto">
    ➕ Cadastrar Produto
</button>

<style>
.btn-cadastrar {
        background-color: #28a745;
        padding: 12px 25px;
        font-size: 1.1rem;
        margin: 5px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        color: white;
    }

.btn-voltar
{
        background-color: #FF0000;
        padding: 12px 25px;
        font-size: 1.1rem;
        margin: 5px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        color: white;
        text-align: right;
}

.div-voltar
{
        display: flex;
        justify-content: flex-end;
}
</style>



@code {
    void CadastrarProduto()
    {
        Navigation.NavigateTo("/cadastrar-produto");
    }

    void VoltarPaginaInicial()
    {
        Navigation.NavigateTo("/");
    }

    public class ProdutoModel
